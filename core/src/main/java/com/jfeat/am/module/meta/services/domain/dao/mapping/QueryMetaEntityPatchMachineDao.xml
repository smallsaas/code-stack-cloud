<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jfeat.am.module.meta.services.domain.dao.QueryMetaEntityPatchMachineDao">
    <sql id="Base_Column_List">
            id, entity, entity_table_name AS entityTableName, entity_field_name AS entityFieldName,
            entity_field_type AS entityFieldType,where_field_name AS whereFieldName, number_range_min AS numberRangeMin, number_range_max AS numberRangeMax,
            permission
        </sql>
    <select id="findMetaEntityPatchMachines" resultType="MetaEntityPatchMachine"
            parameterType="MetaEntityPatchMachine">
        SELECT
        <include refid="Base_Column_List" />
        FROM meta_entity_patch_machine
        WHERE 1=1
        <if test="entity != null and entity!= ''">
            AND meta_entity_patch_machine.entity LIKE CONCAT('%',#{entity},'%')
        </if>

        <if test="entityTableName != null and entityTableName!= ''">
            AND meta_entity_patch_machine.entity_table_name LIKE CONCAT('%',#{entityTableName},'%')
        </if>

        <if test="entityFieldName != null and entityFieldName!= ''">
            AND meta_entity_patch_machine.entity_field_name LIKE CONCAT('%',#{entityFieldName},'%')
        </if>

        <if test="entityFieldType != null and entityFieldType!= ''">
            AND meta_entity_patch_machine.entity_field_type LIKE CONCAT('%',#{entityFieldType},'%')
        </if>
    </select>

    <select id="findSortNumberRecord" resultType="SortNumberRecord">
        SELECT id, ${entityFieldName} AS sortNum
        FROM ${entityTableName}
        WHERE id IN
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </select>

    <select id="selectEntity" resultType="map">
        SELECT *
        FROM ${entityTableName}
        WHERE
        <foreach collection="conditions.keys" item="condKey" separator=" AND ">
            ${condKey} = #{conditions[${condKey}]}
        </foreach>
    </select>

    <select id="selectEntityWithDynamicFields" resultType="map">
        SELECT
        <foreach collection="fields" item="field" separator=",">
            ${field}
        </foreach>
        FROM ${entityTableName}
        WHERE
        <foreach collection="conditions.keys" item="condKey" separator=" AND ">
            ${condKey} = #{conditions[${condKey}]}
        </foreach>
    </select>




    <update id="updateEntity">
        UPDATE ${entityTableName}
        SET
        <foreach collection="params.keys" item="key" separator=",">
            ${key} = #{params[${key}]}
        </foreach>
        WHERE id = #{id}
    </update>

    <update id="updateOnlyEntity">
        UPDATE ${entityTableName}
        SET ${entityField} = #{entityValue}
        WHERE id = #{id}
    </update>

    <update id="updateEntityByConditions">
        UPDATE ${entityTableName}
        SET
        <foreach collection="params.keys" item="key" separator=",">
            ${key} = #{params[${key}]}
        </foreach>
        WHERE
        <foreach collection="conditions.keys" item="condKey" separator=" AND ">
            ${condKey} = #{conditions[${condKey}]}
        </foreach>
    </update>



    <insert id="insertEntity">
        INSERT INTO ${entityTableName}
        (
        <trim prefix="" suffixOverrides=",">
            <foreach collection="params.keys" item="key" separator=",">
                ${key}
            </foreach>
        </trim>
        )
        VALUES
        (
        <trim prefix="" suffixOverrides=",">
            <foreach collection="params.keys" item="key" separator=",">
                #{params[${key}]}
            </foreach>
        </trim>
        )
    </insert>

    <update id="bulkUpdateEntityBySameParams">
        UPDATE ${entityTableName}
        SET
        <foreach collection="params.keys" item="key" separator=",">
            ${key} = #{params[${key}]}
        </foreach>
        WHERE id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            ${id}
        </foreach>
    </update>

    <delete id="bulkDeleteEntity">
        DELETE FROM ${entityTableName}
        WHERE id IN
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectUniqueWhereFieldNames" resultType="string">
        SELECT where_field_name
        FROM meta_entity_patch_machine
        WHERE where_field_name IS NOT NULL
        and entity=#{entity}
        GROUP BY where_field_name
    </select>



</mapper>