<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jfeat.am.module.meta.services.domain.dao.QueryMetaEnableMachineDao">
    <sql id="Base_Column_List">
            id, entity, entity_table_name AS entityTableName, entity_field_name AS entityFieldName, range_min AS rangeMin, range_max AS rangeMax, negative, permission
        </sql>

    <select id="findMetaEnableMachine" resultType="MetaEnableMachine" parameterType="MetaEnableMachine">
        SELECT
        <include refid="Base_Column_List" />
        FROM meta_enable_machine
        WHERE 1=1
        <if test="entity != null and entity!= ''">
            AND meta_enable_machine.entity LIKE CONCAT('%',#{entity},'%')
        </if>
        <if test="entityTableName != null and entityTableName!= ''">
            AND meta_enable_machine.entity_table_name LIKE CONCAT('%',#{entityTableName},'%')
        </if>
        <if test="entityFieldName != null and entityFieldName!= ''">
            AND meta_enable_machine.entity_field_name LIKE CONCAT('%',#{entityFieldName},'%')
        </if>
    </select>

    <update id="validateEntity">
        UPDATE ${entityTableName}
        SET ${entityFieldName} = #{value}
        WHERE id = #{id}
    </update>

    <update id="bulkValidateEntity">
        UPDATE ${entityTableName}
        SET ${entityFieldName} = #{value}
        WHERE id IN
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </update>
</mapper>